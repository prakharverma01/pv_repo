{
  "parser": "babel-eslint",
  "rules": {
    "indent": [
      2,
      4,
      {"SwitchCase": 1}
    ],
    "quotes": [
      2,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
  },
  "env": {
    "es6": true,
    "browser": true,
    "jquery": true,
    "mocha": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true,
    "modules": true,
    "mocha": true
  },
  "plugins": [
    "react"
  ]
}
